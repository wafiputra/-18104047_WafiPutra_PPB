<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_pariwisata"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:srcCompat="@tools:sample/avatars"/>

    <TextView
        android:id="@+id/tv_nama_pariwisata"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Nama Pariwisata"
        android:layout_marginStart="20dp"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_deskripsi_pariwisata"
        app:layout_constraintStart_toEndOf="@id/iv_pariwisata"/>

    <TextView
        android:id="@+id/tv_deskripsi_pariwisata"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:text="Sebuah pariwisata di kota tersebut yang bla bla bla"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/iv_pariwisata"
        app:layout_constraintTop_toBottomOf="@id/tv_nama_pariwisata"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>